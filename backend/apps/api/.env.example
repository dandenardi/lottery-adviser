# Application
APP_NAME="Lottery Adviser API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lottery_adviser
# For Render.com, use the internal database URL they provide

# Redis (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
# For production, use Upstash Redis free tier

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
# Add your React Native app URL in production

# Rate Limiting (free tier)
RATE_LIMIT_SUGGESTIONS_PER_DAY=3
RATE_LIMIT_PREMIUM_UNLIMITED=True

# Lottery Data
LOTTERY_HISTORY_FILE=../lottery-adviser/data/raw/loto_facil_asloterias_ate_concurso_3576_sorteio.xlsx
LOTTERY_MIN_NUMBER=1
LOTTERY_MAX_NUMBER=25
NUMBERS_PER_GAME=15

# Scraper (cron job)
SCRAPER_ENABLED=True
SCRAPER_SCHEDULE_HOUR=22  # Run at 10 PM daily
SCRAPER_URL=https://asloterias.com.br/download-todos-resultados-lotofacil

# RevenueCat (for subscription validation)
REVENUECAT_API_KEY=your_revenuecat_api_key_here
REVENUECAT_WEBHOOK_SECRET=your_webhook_secret_here

# Logging
LOG_LEVEL=INFO
