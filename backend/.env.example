# Application
APP_NAME="Lottery Adviser API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
# Local development
DATABASE_URL=postgresql://user:password@localhost:5432/lottery_adviser
# Production (Render.com) - automatically injected from database service
# DATABASE_URL=postgresql://user:password@host.region.render.com/dbname

# Redis (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
# Production - use Upstash Redis free tier: redis://default:password@region.upstash.io:port

# CORS
# Local development - allow Expo and web dev servers
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
# Production - update with your deployed frontend URL
# CORS_ORIGINS=https://your-app-url.com,exp://your-expo-app
# For initial testing, you can use "*" to allow all origins

# Rate Limiting (free tier)
RATE_LIMIT_SUGGESTIONS_PER_DAY=3
RATE_LIMIT_PREMIUM_UNLIMITED=True

# Lottery Data
LOTTERY_HISTORY_FILE=../lottery-adviser/data/raw/loto_facil_asloterias_ate_concurso_3576_sorteio.xlsx
LOTTERY_MIN_NUMBER=1
LOTTERY_MAX_NUMBER=25
NUMBERS_PER_GAME=15

# Scraper (cron job)
SCRAPER_ENABLED=True
SCRAPER_SCHEDULE_HOUR=22  # Run at 10 PM daily
SCRAPER_URL=https://asloterias.com.br/download-todos-resultados-lotofacil

# Scheduler (for automated updates)
SCHEDULER_ENABLED=True
SCHEDULER_UPDATE_HOUR=22  # Run at 10 PM daily
SCHEDULER_UPDATE_MINUTE=0

# Caixa API (official lottery data source)
CAIXA_API_BASE_URL=https://servicebus2.caixa.gov.br/portaldeloterias/api

# RevenueCat (for subscription validation)
REVENUECAT_API_KEY=your_revenuecat_api_key_here
REVENUECAT_WEBHOOK_SECRET=your_webhook_secret_here

# Logging
LOG_LEVEL=INFO
