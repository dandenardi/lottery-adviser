# Application
APP_NAME=Lottery Adviser API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=5000

# Database - PostgreSQL in Docker
DATABASE_URL=postgresql://lottery_user:lottery_pass@localhost:5433/lottery_adviser

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:19006","http://localhost:8081"]

# Rate Limiting
RATE_LIMIT_SUGGESTIONS_PER_DAY=10
RATE_LIMIT_PREMIUM_UNLIMITED=true

# Lottery Configuration
LOTTERY_MIN_NUMBER=1
LOTTERY_MAX_NUMBER=25
NUMBERS_PER_GAME=15

# Scraper
SCRAPER_ENABLED=true
SCRAPER_SCHEDULE_HOUR=22
SCRAPER_URL=https://asloterias.com.br/download-todos-resultados-lotofacil

# Logging
LOG_LEVEL=DEBUG
